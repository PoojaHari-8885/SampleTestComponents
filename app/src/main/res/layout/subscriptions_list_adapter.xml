<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_subscription_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/subscription_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/subscription_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="15dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/subscription_icon_background"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:foreground="@drawable/icon_bg"
                android:scaleType="fitXY"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Curved" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/subscription_icon_image"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="18dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_foreground" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/subscription_detail_container"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subscription_app_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/subscription_app_description"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="20sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/subscription_status_container"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/subscription_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <View
        android:id="@+id/subscription_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black" />

</RelativeLayout>